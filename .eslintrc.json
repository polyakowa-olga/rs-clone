{
    "plugins": [
        "prettier",
        "import",
        "@typescript-eslint"
    ],
    "extends": [
        "plugin:prettier/recommended",
        "prettier",
        "plugin:@typescript-eslint/recommended",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": false,
        "node": true
    },
    "rules": {
        "prettier/prettier": 1, /* error /
        "no-debugger": "off",
        "no-console": 0, / 1 */
        "class-methods-use-this": "off",
        "arrow-body-style": "off",
        // "prefer-arrow-callback": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "no-undef": 0
    },
    "ignorePatterns": [
        "index.html",
        "webpack.config.js",
        "webpack.development.js",
        "webpack.production.js"
    ]
}